// basics of if else statement
#include<iostream>
using namespace std;
int main(){
float a,b;
cout << "Give 2 floating point numbers as input" << endl;
cin >> a >> b;
if(a>0.01 || b>a){
cout<<"The condition in if statement is correct"
}
else{
cout << "The condition is false";
}
return 0;
}


// grade of student according to marks

#include<iostream>
using namespace std;
int main(){
int marks;
cin >> marks;
if(marks > 90){
cout << "A";
}
else if(marks > 80){
cout << "B";
}
else if(marks > 70){
cout << "C";
}
else{
cout << "Pass";
}
return 0;
}


// another question

#include<iostream>
using namespace std;
int main(){
int a,b,c,d;
cout << "Give 4 integers as input: a,b,c,d" << endl;
cin >> a >> b >> c >> d;
if(a>b && c>d){
cout << "HAHA";
}
else if(a>b && c<d){
cout << "HEHE";
}
else(a<b && c>d){
cout << "HUHU";
}
return 0;
}

// switch case

#include<iostream>
using namespace std;
int main(){
int a;
cout << "enter a integer" << endl;
cin >> a;
switch(a){
case 1:
cout<<"The value of a is 1";
break;
case 2:
cout<<"The value of a is 2";
break;
default:
cout<<"default will be printed";
break;
}
return 0;
}
